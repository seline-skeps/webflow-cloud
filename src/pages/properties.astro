---
import Layout from "../layouts/Layout.astro";
import { Section, Container, Block } from "../../devlink/_Builtin/Basic";
import PropertyOverview from "../../devlink/PropertyOverview.jsx";
import propertiesData from "../data/properties.json";
---

<Layout title="Properties">
  <Section
    client:load
    tag="section"
    style={{
      minHeight: "100vh",
      display: "flex",
      alignItems: "top",
      justifyContent: "start",
      marginTop: "96px",
      marginBottom: "96px",
      marginLeft: "96px",
      marginRight: "96px",
    }}
  >
    <Container>
      <Block>
        <h1 class="property-overview-title">Alle woningen</h1>

        <div class="property-grid">
          <PropertyOverview properties={propertiesData} />
        </div>
      </Block>
    </Container>
  </Section>
</Layout>
